{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="min-h-screen bg-base-200 bg-gradient-to-br from-base-200 via-base-100 to-base-200 relative overflow-hidden flex items-center justify-center px-4">
        <div class="absolute -top-16 -right-16 w-72 h-72 bg-secondary/25 rounded-full blur-xl"></div>
        <div class="absolute -bottom-20 -left-16 w-80 h-80 bg-primary/25 rounded-full blur-xl"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[34rem] h-[34rem] bg-secondary/10 rounded-full blur-3xl"></div>

        <div class="relative z-10 w-full max-w-lg flex justify-center">
            <div class="card bg-base-100 shadow-2xl">
                <div class="card-body">
                    <h1 class="text-3xl font-bold">Créer un compte</h1>
                    <p class="text-sm opacity-70 mb-5">Rejoignez la communauté 40Fit et lancez vos défis.</p>

                    {% if form_errors(registrationForm) %}
                        <div class="alert alert-error">{{ form_errors(registrationForm) }}</div>
                    {% endif %}

                    {{ form_start(registrationForm, { attr: { class: 'space-y-4' } }) }}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="form-control">
                                <label class="label" for="{{ registrationForm.firstName.vars.id }}">
                                    <span class="label-text">Prénom</span>
                                </label>
                                {{ form_widget(registrationForm.firstName, { attr: { class: 'input input-bordered w-full', autocomplete: 'given-name' } }) }}
                                {{ form_errors(registrationForm.firstName) }}
                            </div>

                            <div class="form-control">
                                <label class="label" for="{{ registrationForm.lastName.vars.id }}">
                                    <span class="label-text">Nom</span>
                                </label>
                                {{ form_widget(registrationForm.lastName, { attr: { class: 'input input-bordered w-full', autocomplete: 'family-name' } }) }}
                                {{ form_errors(registrationForm.lastName) }}
                            </div>
                        </div>

                        <div class="form-control">
                            <label class="label" for="{{ registrationForm.email.vars.id }}">
                                <span class="label-text">Email</span>
                            </label>
                            {{ form_widget(registrationForm.email, { attr: { class: 'input input-bordered w-full', autocomplete: 'email' } }) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="form-control">
                            <label class="label" for="{{ registrationForm.plainPassword.vars.id }}">
                                <span class="label-text">Mot de passe</span>
                            </label>
                            {{ form_widget(registrationForm.plainPassword, { attr: { class: 'input input-bordered w-full', autocomplete: 'new-password' } }) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>

                        <div class="form-control">
                            <label class="label cursor-pointer justify-start gap-3">
                                {{ form_widget(registrationForm.agreeTerms, { attr: { class: 'checkbox checkbox-primary' } }) }}
                                <span class="label-text">J'accepte les conditions d'utilisation</span>
                            </label>
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        <button type="submit" class="btn btn-primary w-full">Créer mon compte</button>
                    {{ form_end(registrationForm) }}

                    <p class="text-center text-sm opacity-80">
                        Déjà inscrit ?
                        <a href="{{ path('auth_login') }}" class="link link-secondary">Se connecter</a>
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
