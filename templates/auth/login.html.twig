{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="min-h-screen bg-base-200 bg-gradient-to-br from-base-200 via-base-100 to-base-200 relative overflow-hidden flex items-center justify-center px-4">
        <div class="absolute -top-16 -left-16 w-72 h-72 bg-primary/25 rounded-full blur-xl"></div>
        <div class="absolute -bottom-20 -right-16 w-80 h-80 bg-secondary/25 rounded-full blur-xl"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[32rem] h-[32rem] bg-primary/10 rounded-full blur-3xl"></div>

        <div class="relative z-10 w-full max-w-md flex justify-center">
            <div class="card bg-base-100 shadow-2xl">
                <div class="card-body">
                    <h1 class="text-3xl font-bold">Connexion</h1>
                    <p class="text-sm opacity-70 mb-5">Accédez à votre espace 40Fit.</p>

                    {% if error %}
                        <div class="alert alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form method="post" class="space-y-4">
                        <div class="form-control">
                            <label class="label" for="username">
                                <span class="label-text">Email</span>
                            </label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="input input-bordered w-full" autocomplete="email" required autofocus>
                        </div>
                        <div class="form-control">
                            <label class="label" for="password">
                                <span class="label-text">Mot de passe</span>
                            </label>
                            <input type="password" name="_password" id="password" class="input input-bordered w-full" autocomplete="current-password" required>
                        </div>
                        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-primary w-full" type="submit">Se connecter</button>
                    </form>

                    <p class="text-center text-sm opacity-80">
                        Pas encore de compte ?
                        <a href="{{ path('auth_register') }}" class="link link-secondary">Créer un compte</a>
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
