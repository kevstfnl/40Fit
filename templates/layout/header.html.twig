<header class="sticky top-0 z-30 w-full bg-base-100 border-b border-base-200 shadow-sm text-base-content">
    <div class="navbar max-w-6xl mx-auto px-4">
        <div class="navbar-start gap-2">
            <div class="dropdown md:hidden">
                <div tabindex="0" role="button" class="btn btn-ghost btn-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </div>
                <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] w-52 rounded-box bg-base-100 p-2 shadow">
                    <li><a href="{{ path('app_index') }}">Accueil</a></li>
                    <li><a href="{{ path('challenges_index') }}">Challenges</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('profile_index') }}">Profil</a></li>
                    {% endif %}
                </ul>
            </div>
            <a href="{{ path('app_index') }}" class="text-lg font-extrabold tracking-tight">40Fit</a>
        </div>
        <div class="navbar-end gap-2">
            {% if app.user is null %}
                <a href="{{ path('app_index') }}">Accueil</a>
                <a href="{{ path('challenges_index') }}">Challenges</a>
                <a href="{{ path('auth_login') }}" class="btn btn-primary btn-sm">Se connecter</a>
                <a href="{{ path('auth_register') }}" class="btn btn-outline btn-sm">S'enregistrer</a>
            {% else %}
                <a href="{{ path('profile_index') }}" class="btn btn-primary btn-sm">Dashboard</a>
                <a href="{{ path('auth_logout') }}" class="btn btn-outline btn-sm">Se d√©connecter</a>
            {% endif %}
        </div>
    </div>
</header>
