{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <section class="min-h-screen bg-base-200 bg-gradient-to-br from-base-200 via-base-100 to-base-200 relative overflow-hidden flex items-center justify-center px-4">
        <div class="absolute -top-16 -right-16 w-72 h-72 bg-secondary/25 rounded-full blur-xl"></div>
        <div class="absolute -bottom-20 -left-16 w-80 h-80 bg-primary/25 rounded-full blur-xl"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[34rem] h-[34rem] bg-secondary/10 rounded-full blur-3xl"></div>

        <div class="relative z-10 w-full max-w-lg flex justify-center">
            <div class="card bg-base-100 shadow-2xl">
                <div class="card-body">
                    <h1 class="text-3xl font-bold">Modifier mon profil</h1>
                    <p class="text-sm opacity-70 mb-5">Mettez à jour vos informations personnelles.</p>

                    {% if form_errors(profileForm) %}
                        <div class="alert alert-error">{{ form_errors(profileForm) }}</div>
                    {% endif %}

                    {{ form_start(profileForm, { attr: { class: 'space-y-4' } }) }}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="form-control">
                                <label class="label" for="{{ profileForm.firstName.vars.id }}">
                                    <span class="label-text">Prénom</span>
                                </label>
                                {{ form_widget(profileForm.firstName, { attr: { class: 'input input-bordered w-full', autocomplete: 'given-name' } }) }}
                                {{ form_errors(profileForm.firstName) }}
                            </div>

                            <div class="form-control">
                                <label class="label" for="{{ profileForm.lastName.vars.id }}">
                                    <span class="label-text">Nom</span>
                                </label>
                                {{ form_widget(profileForm.lastName, { attr: { class: 'input input-bordered w-full', autocomplete: 'family-name' } }) }}
                                {{ form_errors(profileForm.lastName) }}
                            </div>
                        </div>

                        <div class="form-control">
                            <label class="label" for="{{ profileForm.email.vars.id }}">
                                <span class="label-text">Email</span>
                            </label>
                            {{ form_widget(profileForm.email, { attr: { class: 'input input-bordered w-full', autocomplete: 'email' } }) }}
                            {{ form_errors(profileForm.email) }}
                        </div>

                        <div class="divider">Mot de passe</div>

                        <div class="form-control">
                            <label class="label" for="{{ profileForm.currentPassword.vars.id }}">
                                <span class="label-text">Mot de passe actuel</span>
                            </label>
                            {{ form_widget(profileForm.currentPassword, { attr: { class: 'input input-bordered w-full', autocomplete: 'current-password' } }) }}
                            {{ form_errors(profileForm.currentPassword) }}
                        </div>

                        <div class="form-control">
                            <label class="label" for="{{ profileForm.newPassword.first.vars.id }}">
                                <span class="label-text">Nouveau mot de passe</span>
                            </label>
                            {{ form_widget(profileForm.newPassword.first, { attr: { class: 'input input-bordered w-full', autocomplete: 'new-password' } }) }}
                            {{ form_errors(profileForm.newPassword.first) }}
                        </div>

                        <div class="form-control">
                            <label class="label" for="{{ profileForm.newPassword.second.vars.id }}">
                                <span class="label-text">Confirmer le nouveau mot de passe</span>
                            </label>
                            {{ form_widget(profileForm.newPassword.second, { attr: { class: 'input input-bordered w-full', autocomplete: 'new-password' } }) }}
                            {{ form_errors(profileForm.newPassword.second) }}
                        </div>

                        <button type="submit" class="btn btn-primary w-full">Enregistrer</button>
                    {{ form_end(profileForm) }}

                    <p class="text-center text-sm opacity-80">
                        <a href="{{ path('profile_index') }}" class="link link-secondary">Retour au profil</a>
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
