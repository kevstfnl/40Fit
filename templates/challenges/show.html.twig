{% extends "base.html.twig" %}

{% block body %}
    <section
        class="bg-base-200 grid place-items-center bg-gradient-to-br from-base-200 via-base-100 to-base-200 min-h-screen py-16 px-4">
        <div class="absolute -top-16 -right-16 w-72 h-72 bg-secondary/25 rounded-full blur-xl"></div>
        <div class="absolute -bottom-20 -left-16 w-80 h-80 bg-primary/25 rounded-full blur-xl"></div>
        <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[34rem] h-[34rem] bg-secondary/10 rounded-full blur-3xl"></div>

        <div class="relative z-10 max-w-5xl mx-auto grid grid-cols-1 lg:grid-cols-[1.2fr_0.8fr] gap-8">
            <div class="card bg-base-100 shadow-2xl border border-base-200/60">
                <div class="card-body gap-6">
                    <div class="flex items-start justify-between gap-4">
                        <div>
                            <span class="badge badge-secondary badge-outline">{{ category.title }}</span>
                            <h1 class="mt-4 text-3xl md:text-4xl font-bold leading-tight">
                                {{ challenge.title }}
                            </h1>
                        </div>
                        <span class="badge badge-primary badge-outline">A faire</span>
                    </div>
                    <p class="text-base md:text-lg opacity-80 leading-relaxed">
                        {{ challenge.description }}
                    </p>
                    <div class="divider">Conseil</div>
                    <p class="text-sm opacity-70">
                        Notez votre score dès la fin pour suivre votre progression.
                    </p>
                </div>
            </div>

            <div class="card bg-base-100 shadow-xl border border-base-200/60">
                <div class="card-body gap-4">
                    <h2 class="card-title">Enregistrer mon résultat</h2>
                    {% if resultForm %}
                        {% if form_errors(resultForm) %}
                            <div class="alert alert-error">{{ form_errors(resultForm) }}</div>
                        {% endif %}
                        {{ form_start(resultForm, { attr: { class: 'space-y-4' } }) }}
                        <div class="form-control">
                            <label class="label" for="{{ resultForm.score.vars.id }}">
                                <span class="label-text">Score</span>
                            </label>
                            {{ form_widget(resultForm.score, { attr: { class: 'input input-bordered w-full', placeholder: 'Ex: 10' } }) }}
                            {{ form_errors(resultForm.score) }}
                        </div>
                        <div class="form-control">
                            <label class="label" for="{{ resultForm.score.vars.id }}">
                                <span class="label-text">Date</span>
                            </label>
                            {{ form_widget(resultForm.date, { attr: { class: 'input input-bordered w-full' }}) }}
                            {{ form_errors(resultForm.date) }}
                        </div>
                        <button type="submit" class="btn btn-primary w-full">Enregistrer le résultat</button>
                        {{ form_end(resultForm) }}
                    {% else %}
                        <p class="text-sm opacity-70">
                            <a class="link link-secondary" href="{{ path('auth_login') }}">Connectez-vous</a>
                            pour enregistrer un résultat.
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
